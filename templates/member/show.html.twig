{% extends 'base.html.twig' %}

{% block title %}Member{% endblock %}

{% block body %}
    <h1>Member</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ member.id }}</td>
            </tr>
            <tr>
                <th>Loginname</th>
                <td>{{ member.loginname }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ member.password }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ member.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ member.lastname }}</td>
            </tr>
            <tr>
                <th>Dateofbirth</th>
                <td>{{ member.dateofbirth ? member.dateofbirth|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Emailaddress</th>
                <td>{{ member.emailaddress }}</td>
            </tr>
            <tr>
                <th>Street</th>
                <td>{{ member.street }}</td>
            </tr>
            <tr>
                <th>Postal_code</th>
                <td>{{ member.postalCode }}</td>
            </tr>
            <tr>
                <th>Place</th>
                <td>{{ member.place }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('member_index') }}">back to list</a>

    <a href="{{ path('member_edit', {'id': member.id}) }}">edit</a>

    {{ include('member/_delete_form.html.twig') }}
{% endblock %}
